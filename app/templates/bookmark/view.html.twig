<h1>View Bookmark</h1>
{% if bookmark|length %}
    <div>
        {{ bookmark.title }}, {{ bookmark.url }}
    </div>
{% else %}
    <div>
        <i> No bookmark found! </i>
    </div>
{% endif %}

<a href="{{ url('bookmark_index') }}" title="{{ 'label.back_to_list' }}">
    {{ 'label.back_to_list'}}
</a>